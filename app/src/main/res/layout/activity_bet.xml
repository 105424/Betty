<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nl.arts.mark.betty.BetActivity"
    android:id="@+id/bet_activity">

    <TextView android:text="Name" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/bet_name" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bet_list"
        android:layout_below="@+id/bet_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="147dp"
        android:choiceMode="none" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solve"
        android:id="@+id/b_bet_solve"
        android:layout_marginTop="31dp"
        android:onClick="b_solve"
        android:layout_below="@+id/bet_name"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Winner: "
        android:id="@+id/bet_winnerLabel"
        android:layout_below="@+id/b_bet_solve"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/bet_winnerText"
        android:layout_alignTop="@+id/bet_winnerLabel"
        android:layout_toRightOf="@+id/bet_winnerLabel"
        android:layout_toEndOf="@+id/bet_winnerLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Win Date: "
        android:id="@+id/bet_winDateLabel"
        android:layout_below="@+id/bet_winnerLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/bet_winDateText"
        android:layout_alignTop="@+id/bet_winDateLabel"
        android:layout_toRightOf="@+id/bet_winDateLabel"
        android:layout_toEndOf="@+id/bet_winDateLabel" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:onClick="b_bet_delete"
        android:id="@+id/b_bet_delete"
        android:layout_alignBottom="@+id/b_bet_solve"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
